{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "ES2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"]
    },
    "jsx": "react"

  },
  "include": ["./src/**/*"]
}

